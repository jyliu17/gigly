<%= render "shared/errors"%>

<div class="container rounded bg-dark text-white">
    <br>
    <h1> Write Review </h1>

    <%= form_for @review, :html => {:class => "form-horizontal center"} do |f| %>
    <div class="form_group">
        <label class="index_item">Title:</label>
        <%= f.text_field :title, class: "form-control form-control-lg" %>
    </div>

    <div class="form_group">
        <label class="index_item">Rating:</label>
        <%= f.number_field :rating, class: "form-control form-control-lg"%>
    </div>

    <div class="form_group">
        <label class="index_item">Description:</label>
        <%= f.text_field :description, class: "form-control form-control-lg" %>
    </div>
    <br>
    <%= f.submit "Submit", class: "btn btn-default btn-primary btn-lg" %>
    <% end %>
    <br>
</div>