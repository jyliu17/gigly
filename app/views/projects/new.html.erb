<%= render "shared/errors"%>

<div class="container rounded bg-dark text-white">
    <br>
    <h1> Create A Project </h1>

    <%= form_for @project, :html => {:class => "form-horizontal center"} do |f| %>
    <div class="form_group">
        <label class="index_item">Name:</label>
        <%= f.text_field :name, class: "form-control form-control-lg" %>
    </div>

    <div class="form_group">
        <label class="index_item">Description:</label>
        <%= f.text_field :description, class: "form-control form-control-lg"%>
    </div>

    <div class="form_group">
        <label class="index_item">Deadline: (yyyy/mm/dd)</label>
        <%= f.text_field :deadline, class: "form-control form-control-lg" %>
    </div>

    <div class="form_group">
        <label class="index_item">Location:</label>
        <%= f.text_field :location, class: "form-control form-control-lg" %>
    </div>
    <br>
    <%= f.submit "Submit", class: "btn btn-default btn-primary btn-lg" %>
    <% end %>
    <br>
</div>
